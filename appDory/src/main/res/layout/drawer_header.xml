<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/drawer_userpic"
        android:layout_width="@dimen/drawer_userpic_size"
        android:layout_height="@dimen/drawer_userpic_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/drawer_userpic_descritption" />

    <ProgressBar
        android:id="@+id/drawer_userpic_progress"
        android:layout_width="@dimen/drawer_userpic_size"
        android:layout_height="@dimen/drawer_userpic_size"
        android:layout_alignLeft="@id/drawer_userpic"
        android:layout_alignTop="@id/drawer_userpic"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/drawer_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_userpic"
        android:layout_centerHorizontal="true"
        android:background="#2DA2CE"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>